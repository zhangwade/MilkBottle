<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 闪屏 -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- 白天主题 -->
    <style name="DayTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/dayWindowBackground</item>
        <item name="colorPrimaryDark">@color/dayWindowBackground</item>
        <item name="android:windowBackground">@color/dayWindowBackground</item>
        <item name="android:textColorPrimary">@color/textColorFirst</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="colorControlNormal">@color/accentColor</item>
        <item name="android:textColor">@color/textColorFirst</item>
        <item name="navigationbarSelectedColor">@color/dayNavigationbarSelectedColor</item>
        <item name="navigationbarBackgroundColor">@color/dayWindowBackground</item>
    </style>


    <!-- 黑夜主题 -->
    <style name="NightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/nightNonWindowBackground</item>
        <item name="colorPrimaryDark">@color/nightNonWindowBackground</item>
        <item name="android:windowBackground">@color/nightWindowBackground</item>
        <item name="android:textColorPrimary">@color/textColorFirst</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="colorControlNormal">@color/accentColor</item>
        <item name="android:textColor">@color/textColorFirst</item>
        <item name="navigationbarSelectedColor">@color/nightNavigationbarSelectedColor</item>
        <item name="navigationbarBackgroundColor">@color/nightNonWindowBackground</item>
    </style>


</resources>
