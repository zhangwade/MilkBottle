<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 闪屏 -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- 白天主题 -->
    <style name="DayTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/dayWindowBackground</item>
        <item name="colorPrimaryDark">@color/dayWindowBackground</item>
        <item name="android:windowBackground">@color/dayWindowBackground</item>
        <item name="android:textColorPrimary">@color/textColorFirst</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="colorControlNormal">@color/accentColor</item>
        <item name="android:textColor">@color/textColorFirst</item>
        <item name="navigationColor">@color/dayNavigationColor</item>
        <item name="navigationbarBackgroundColor">@color/dayWindowBackground</item>
        <item name="dividerColor">@color/dayDividerColor</item>
    </style>


    <!-- 黑夜主题 -->
    <style name="NightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/nightWindowBackground</item>
        <item name="colorPrimaryDark">@color/nightWindowBackground</item>
        <item name="android:windowBackground">@color/nightWindowBackground</item>
        <item name="android:textColorPrimary">@color/textColorFirst</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="colorControlNormal">@color/accentColor</item>
        <item name="android:textColor">@color/textColorFirst</item>
        <item name="navigationColor">@color/nightNavigationColor</item>
        <item name="navigationbarBackgroundColor">@color/nightNonWindowBackground</item>
        <item name="dividerColor">@color/nightDividerColor</item>
    </style>

    <!-- 白天小字主题 -->
    <style name="DayThemeSmallText" parent="DayTheme">
        <item name="textSizeFirst">@dimen/smallTextSizeFirst</item>
        <item name="textSizeSecond">@dimen/smallTextSizeSecond</item>
        <item name="textSizeThird">@dimen/smallTextSizeThird</item>
    </style>

    <!-- 白天大字主题 -->
    <style name="DayThemeBigText" parent="DayTheme">
        <item name="textSizeFirst">@dimen/BigTextSizeFirst</item>
        <item name="textSizeSecond">@dimen/BigTextSizeSecond</item>
        <item name="textSizeThird">@dimen/BigTextSizeThird</item>
    </style>

    <!-- 黑夜小字主题 -->
    <style name="NightThemeSmallText" parent="NightTheme">
        <item name="textSizeFirst">@dimen/smallTextSizeFirst</item>
        <item name="textSizeSecond">@dimen/smallTextSizeSecond</item>
        <item name="textSizeThird">@dimen/smallTextSizeThird</item>
    </style>

    <!-- 黑夜大字主题 -->
    <style name="NightThemeBigText" parent="NightTheme">
        <item name="textSizeFirst">@dimen/BigTextSizeFirst</item>
        <item name="textSizeSecond">@dimen/BigTextSizeSecond</item>
        <item name="textSizeThird">@dimen/BigTextSizeThird</item>
    </style>

    <style name="TextFirst">
        <item name="android:textSize">?attr/textSizeFirst</item>
    </style>

    <style name="TextSecond">
        <item name="android:textSize">?attr/textSizeSecond</item>
    </style>

    <style name="TextThird">
        <item name="android:textSize">?attr/textSizeThird</item>
    </style>

    <style name="WordCountOverflow">
        <item name="android:textColor">@color/highLight</item>
    </style>
</resources>
