<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 闪屏 -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- 白天主题 -->
    <style name="DayTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#ffffff</item>
        <item name="colorPrimaryDark">#ffffff</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:windowBackground">@color/dayWindowBackground</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">#00BCD4</item>
    </style>

    <style name="DayTitleStyle">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="DayContentStyle">
        <item name="android:textColor">#000000</item>
    </style>

    <!-- 黑夜主题 -->
    <style name="NightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#484545</item>
        <item name="colorPrimaryDark">#484545</item>
        <item name="android:textColorPrimary">#d2cece</item>
        <item name="android:windowBackground">@color/nightWindowBackground</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">#00BCD4</item>
    </style>

    <style name="NightTitleStyle">
        <item name="android:textColor">#d2cece</item>
    </style>

    <style name="NightContentStyle">
        <item name="android:textColor">#d2cece</item>
    </style>

</resources>
