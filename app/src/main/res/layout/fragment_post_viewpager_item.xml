    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:text="话题"
        style="@style/TextFirst"
        android:id="@+id/fragment_post_viewpager_item_text_theme" />

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            style="@style/TextSecond"
            android:id="@+id/fragment_post_viewpager_item_text_follow"
            android:textColor="@color/highLight"
            android:elevation="5dp"
            android:text="+ 关注"/>
        <ImageView android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/fragment_post_viewpager_item_img_icon"
            android:src="@mipmap/ic_3d_rotation_black_24dp"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"/>
        <ImageButton android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:visibility="invisible"/>
    </RelativeLayout>

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="昵称"
        style="@style/TextSecond"
        android:textColor="@color/textColorSecond"
        android:id="@+id/fragment_post_viewpager_item_text_author" />

    <ImageView android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:id="@+id/fragment_post_viewpager_item_img_photo"
        android:paddingTop="10dp"/>

    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/fragment_post_viewpager_item_text_content"
        style="@style/TextSecond"
        android:maxLength="100"
        android:text="内容"/>

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp">

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_post_viewpager_item_text_time"
            android:layout_alignParentLeft="true"
            style="@style/TextThird"
            android:textColor="@color/textColorSecond"
            android:text="3-31"/>

        <ImageButton android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/fragment_post_viewpager_item_imgbtn_likes"
            android:layout_marginRight="5dp"
            android:scaleType="centerCrop"
            android:background="@mipmap/non_likes"
            android:layout_alignParentRight="true"/>

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:id="@+id/fragment_post_viewpager_item_text_comment_count"
            android:layout_toLeftOf="@+id/fragment_post_viewpager_item_imgbtn_likes"
            style="@style/TextThird"
            android:textColor="@color/textColorSecond"
            android:text="0"/>
        <ImageButton android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/post_item_comment_pic"
            android:scaleType="centerCrop"
            android:background="@mipmap/comment"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/fragment_post_viewpager_item_text_comment_count"/>
    </RelativeLayout>

    <TextView android:layout_height="0.5dp"
        android:layout_width="match_parent"
        android:background="?attr/dividerColor"/>
</LinearLayout>