<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/activity_post_detail_comment_item_img_author_icon"
        android:layout_margin="10dp"
        android:src="@mipmap/ic_3d_rotation_black_24dp"
        android:layout_marginRight="10dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_post_detail_comment_item_text_author_name"
            android:paddingTop="10dp"
            android:text="昵称" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_post_detail_comment_item_text_time"
            android:paddingTop="10dp"
            android:text="2017-4-16 10:00:00" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_post_detail_comment_item_text_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="内容" />
        <TextView android:layout_height="0.5dp"
            android:layout_width="match_parent"
            android:background="?attr/dividerColor"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除"
        android:id="@+id/activity_post_detail_comment_item_imgbtn_delete"
        android:layout_margin="10dp"/>
</LinearLayout>