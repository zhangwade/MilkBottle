<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_3d_rotation_black_24dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:id="@+id/activity_post_detail_recommend_item_user_pic"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="昵称"
        android:id="@+id/activity_post_detail_recommend_item_user_name"
        android:layout_toRightOf="@id/activity_post_detail_recommend_item_user_pic" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="推荐了帖子"
        android:layout_toRightOf="@id/activity_post_detail_recommend_item_user_name"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017-4-16 10:00:00"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/activity_post_detail_recommend_item_user_pic"
        android:layout_below="@id/activity_post_detail_recommend_item_user_name" />
</RelativeLayout>