<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_theme_item_text_name"
        android:text="话题"
        android:textSize="?attr/textSizeFirst"
        android:textColor="@color/textColorFirst"
        android:padding="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_theme_item_text_postCount"
        android:text="0 个帖子"
        android:textSize="?attr/textSizeThird"
        android:textColor="@color/textColorSecond"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"/>
    <TextView android:layout_height="0.5dp"
        android:layout_width="match_parent"
        android:background="?attr/dividerColor" />
</LinearLayout>