<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="10dp"
    android:background="@drawable/square_image_view">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_watch_big_photo_popupwindow_text_save"
        android:text="保存图片"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/textColorFirst"
        style="@android:style/TextAppearance.Large" />

    <TextView android:layout_height="0.5dp"
        android:layout_width="match_parent"
        android:background="@color/dayDividerColor"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_watch_big_photo_popupwindow_text_cancel"
        android:text="取消"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/textColorFirst"
        style="@android:style/TextAppearance.Large" />
</LinearLayout>